<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgDerecha"
            android:layout_width="161dp"
            android:layout_height="133dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/fototxtderecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/txtDerecha"
            android:layout_width="176dp"
            android:layout_height="196dp"
            android:layout_marginStart="10dp"
            android:text="@string/txtDerecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgDerecha"
            app:layout_constraintTop_toTopOf="@+id/imgDerecha" />

        <ImageView
            android:id="@+id/imgIzquierda"
            android:layout_width="172dp"
            android:layout_height="165dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/fototxtizqda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDerecha" />

        <TextView
            android:id="@+id/txtIzquierda"
            android:layout_width="161dp"
            android:layout_height="215dp"
            android:layout_marginEnd="10dp"
            android:text="@string/txtIzquierda"
            app:layout_constraintEnd_toStartOf="@+id/imgIzquierda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgIzquierda" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logomajuelo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>